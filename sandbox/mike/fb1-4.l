/* recognize tokens for the calculator and print them out */


%{

#include <stdio.h>
   enum yytokentype {
     NUMBER = 258,
     ADD = 259,
     SUB = 260,
     MUL = 261,
     DIV = 262,
     ABS = 263,
     EOL = 264 /* end of line */
   };

   int yylval;

%}

%%
"+"	{ return ADD; }
"-"	{ return SUB; }
"*"	{ return MUL; }
"/"	{ return DIV; }
"|"     { return ABS; }
[0-9]+	{ yylval = atoi(yytext); return NUMBER; }
\n      { return EOL; }
[ \t]   { /* ignore white space */ }
.	{ printf("Mystery character %c\n", *yytext); }
%%
main()
{
  FILE *fptr;
  fptr = fopen("ast.dot","w");
  fprintf(fptr,"graph {\n");


  int tok;

  while(tok = yylex()) {
    printf("%d", tok);
    fprintf(fptr,"%d",tok);
    if(tok == NUMBER)
            printf(" = %d\n", yylval);
            fprintf(fptr," -- %d\n",yylval);



  }

  fprintf(fptr,"}");
  fclose(fptr);

}
